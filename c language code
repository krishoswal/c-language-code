#include <stdio.h>

int main() {
    int n, sum = 0;
    
    // Ask the user for input
    printf("Enter a number: ");
    scanf("%d", &n);
    
    // Calculate the sum of first n integers
    for (int i = 1; i <= n; i++) {
        sum += i;
    }

    // Output the result
    printf("The sum of the first %d integers is: %d\n", n, sum);

    return 0;
}
